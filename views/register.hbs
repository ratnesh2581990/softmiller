  <hr>
  <div class="row">
    <div class="col-md-12">
      	<form method="POST" action="/users/register">
          <div id="form-group">
            <label>Name:</label>
            <input class="form-control" name="name" type="text">
          </div>
          <div id="form-group">
            <label>Email:</label>
            <input class="form-control" name="email" type="text">
          </div>
