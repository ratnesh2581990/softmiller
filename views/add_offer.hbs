{{> header}}
{{> nav}}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Add Offer</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <form method="POST" action="/offers/add" enctype="multipart/form-data" class="repeater">
            <div id="form-group">
                <label>Product Name:</label>
                <select class="form-control" name="productname" id="offerproductname">
                    <option value="" selected="">None</option>
                    {{#each products}}
                    <option value="{{this.producttitle}}" data-productid="{{this._id}}">{{this.producttitle}}</option>
                    {{/each}}
                </select>
            </div>
            <div id="form-group">
                <label>Brand Name:</label>
                 <div class="product_brand_div">
                    <select class="form-control" name="productbrand" id="productbrand">
                    </select>
                </div>
                <div class="product_id_hidden_div"></div>      
            </div>
                
            <div id="form-group">
                <label>Pack:</label>
                <div class="product_variation_div">
                    <select class="form-control" name="pack" id="pack">
                    </select>
                </div>
            </div>
            <div id="form-group">
                <label>Offer Info:</label>
                <textarea class="form-control" name="offerinfo"></textarea>
            </div>
            <div id="form-group">
                <label>Price Offer:</label>
                <div class="price_offer_wrapper">
                    <input type="text" class="form-control price_offer_field" name="priceoffer"/>
                    <select class="form-control" name="priceofferunit" id="priceofferunit">
                        <option value="percentage" selected="">%</option>
                        <option value="rupees">Rs</option>
                    </select>
                    <select class="form-control" name="priceofferapplied" id="priceofferapplied">
                        <option value="perpack" selected="">Per Pack</option>
                        <option value="perqtl">Per QTL</option>
                    </select>
                </div>
            </div>
            <div id="form-group">
                <label>Max Limit Per User:</label>
                <div class="form-group-wrapper">
                    <input type="text" class="form-control" name="maxlimituser"/>
                    <select class="form-control" name="maxlimituserunit" id="maxlimituserunit">
                        <option value="Kg">KG</option>
                        <option value="qtl">Qtl</option>
                    </select>
                </div>
            </div>

            <div id="form-group">
                <label>Offer Date Start:</label>
                <input type="text" class="form-control" name="offerstartdate" id="offerstartdate" autocomplete="off"/> 
            </div>
            <div id="form-group">
                <label>Offer Date End:</label>
                <input type="text" class="form-control" name="offerenddate" id="offerenddate" autocomplete="off"/> 
            </div>

            <div id="form-group">
                <label>Offer Start Time:</label>
                <input type="text" class="form-control" name="offerstarttime" id="offerstarttime" autocomplete="off"/> 
            </div>
            <div id="form-group">
                <label>Offer End Time:</label>
                <input type="text" class="form-control" name="offerendtime" id="offerendtime" autocomplete="off"/> 
            </div>

            <div id="form-group">
                <label>Offer Size:</label>
                <div class="form-group-wrapper">
                    <input type="text" class="form-control" name="offersize"/>
                    <select class="form-control" name="offersizeunit" id="offersizeunit">
                        <option value="Kg">KG</option>
                        <option value="qtl">Qtl</option>
                    </select>
                </div> 
            </div>
            
            <div id="form-group">
                <label>Image:</label>
                <input class="" name="offerimage" type="file">
            </div>
            <br>
            <input class="btn btn-success" type="submit" value="Submit">
        </form>
    </div><!-- /.row -->
</div><!-- /#page-wrapper -->
{{> footer}}